<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:background="@drawable/setting_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_round_arrow_back_ios_24" />
        </LinearLayout>

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="118dp"
            android:translationX="100dp"
            app:srcCompat="@drawable/setting_person" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NAME"
                android:textColor="#3C97EC"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="개나리 아파트 102동 1010호"
                android:textColor="#3C97EC"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Model 111.11.11k"
                android:textColor="#3C97EC"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/set1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_round_border"
        android:gravity="center"
        android:text="개인정보 수정"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationY="50dp"
        android:translationX="30dp"/>
    <TextView
        android:id="@+id/set2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="가족 출입 알람 설정"
        android:textSize="20dp"
        android:background="@drawable/setting_round_border"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationY="70dp"
        android:translationX="30dp"/>

    <TextView
        android:id="@+id/set3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="문의"
        android:textSize="20dp"
        android:background="@drawable/setting_round_border"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationY="90dp"
        android:translationX="30dp"/>

    //리스트뷰
    <!--    <ListView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:background="@drawable/setting_round_border"-->
    />
</LinearLayout>